#escape function 
print("lineA\nlineB")
print("lineA\tlineB")
print("lineA\blineB")
print("lineA\\")          *single quote
print("lineB\\\\")        *double quotes

#python as calculator
print("2+3")
print("2-3")
print("2*3")
print("4/2")
print("4//2")
print("2**3**2")
print("(2*3)*4/2")

#variables
name="harshit"
print(name)

#naming rules for variable
|name="harshit"                 Error
name|="harshit"                 no Error
name$="harshit"                 Error
$name="harshit"                 Error
_name="harshit"                 no error

#convection for variable naming 
user_one="harshit"              snake case
userOne="harshit"               camel case

